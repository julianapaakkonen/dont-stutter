<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuStart"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/backgroundmain">

    <!-- "Start" menu (second menu) -->

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">
        <TableRow>
            <!-- Logo -->
            <ImageView
                android:id="@+id/logo"
                android:layout_marginBottom="5dp"
                android:src="@drawable/logo" />
        </TableRow>
        <TableRow>
            <!-- (Play) One Minute mode button -->
            <Button
                android:id="@+id/playOneMinuteButton"
                android:onClick="playOneMinuteClicked"
                android:backgroundTint="@color/importantpink"
                android:gravity="center_horizontal|center_vertical"
                android:text="One Minute Mode" />
        </TableRow>
        <TableRow>
            <!-- (Play) Relax mode button -->
            <Button
                android:id="@+id/playRelaxModeButton"
                android:onClick="playRelaxModeClicked"
                android:backgroundTint="@color/importantpink"
                android:gravity="center_horizontal|center_vertical"
                android:text="Relax Mode" />
        </TableRow>
        <TableRow>
            <!-- Back button -->
            <Button
                android:id="@+id/backButton"
                android:onClick="backClicked"
                android:backgroundTint="@color/lightpink"
                android:gravity="center_horizontal|center_vertical"
                android:text="Back" />
        </TableRow>
    </TableLayout>
</LinearLayout>